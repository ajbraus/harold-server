.container
  .text-center
    h3 {{campaign.title}}
    p by 
      a(href="/@{{campaign.user.handle}}") {{campaign.user.name}}
  br
  .row
    .col-sm-8.col-lg-7
      img.img-responsive(ng-src="{{campaign.img_url}}", style="width:100%;")  
      p {{campaign.summary}}
      img.image-responsive(ng-src="http://placehold.it/240x150", style="width:100%;")    
    .col-sm-4.col-lg-4.col-lg-offset-1
      h1 123
      p backers
      h1 %{{campaign.percent_backed}} 
      p Funded of {{campaign.goal}}  
      progress(max="100" value="{{campaign.percent_backed}}")
      h1 {{campaign.days_left}} days 
      p left to back
      a.btn.btn-lg.btn-success(href="#" ng-click="backCampaign()") Back Campaign
      hr
      h4 Published Articles
      ng-include(src="'templates/_article.jade'" ng-repeat="article in campaign.articles")
      hr